/**
  * @brief This function handles USART1 global interrupt / USART1 wake-up interrupt through EXTI line 25.
  */
void USART1_IRQHandler(void)
{
    /* USER CODE BEGIN USART1_IRQn 0 */
	uint8_t  U1DMA_RX_len;                                                                 /*用于记录UDMA接收数据长度，单位字节*/
 	if ( LL_USART_IsActiveFlag_IDLE( USART1) == 1 )                                        /*检测到串口空闲，帧结束*/
	{
		LL_USART_ClearFlag_IDLE( USART1 );                                                   /* 清除串口空闲标志位 */
		LL_DMA_DisableChannel(DMA1,LL_DMA_CHANNEL_3);                                        /* 停止DMA传输 */
    U1DMA_RX_len = 200 - LL_DMA_GetDataLength(DMA1,LL_DMA_CHANNEL_3);                    /* 计算DMA接收指令1数据帧长度 */
   
		if(U1DMA_RX_len!=0)
	{		
		  U1_RD.Data_Lenth=U1DMA_RX_len;
			memset(U1_RD.BUF_DMA,0,200); 	
			memcpy(U1_RD.BUF_DMA,(const char *)U1DMA_RXBUF,U1DMA_RX_len);		                   /*拷贝串口数据到二级数据处理缓存*/
	}	
     memset(U1DMA_RXBUF,0,U1DMA_RX_len+1);                                               /*清空一级DMA缓存，准备下一次接收*/
	  
		LL_USART_EnableIT_IDLE(USART1);                                                      /* 使能串口1空闲中断 */		
		LL_USART_EnableIT_RXNE(USART1);                                                      /* 使能串口1接收中断 */
	  Start_DMA();                                                                         /* 设置使能串口1DMA传输通道，准备下一次DMA传输 */
	}
    /* USER CODE END USART1_IRQn 0 */
    /* USER CODE BEGIN USART1_IRQn 1 */
//			Enable_USART1_IT();
    /* USER CODE END USART1_IRQn 1 */
}

